{
  "manifest_version": 3,
  "name": "Aicus",
  "version": "1.0.0",
  "description": "채팅 기록에서 질문/답변으로 쉽게 이동할 수 있는 플로팅 리스트. GPT, Claude, Gemini 지원. Created by @pikiforyou.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://gemini.google.com/app*",
        "https://bard.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "aicus - Chat Navigator"
  },
  "web_accessible_resources": [
    {
      "resources": ["docs/daram-qr.png", "docs/coffee-qr.png"],
      "matches": ["<all_urls>"]
    }
  ]
}